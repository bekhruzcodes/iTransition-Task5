{# templates/book_generator/index.html.twig #}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book Generator</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }
        .book-container {
            margin-bottom: 30px;
            border-bottom: 1px solid #ccc;
            padding-bottom: 20px;
        }
        .book-title {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 10px;
        }
        .book-author, .book-publisher {
            font-size: 18px;
            margin-bottom: 5px;
        }
        .book-isbn {
            font-size: 14px;
            color: #666;
        }
        .book-review {
            margin-top: 10px;
            font-style: italic;
            color: #555;
        }
        .review-author {
            font-weight: bold;
            margin-top: 5px;
        }
    </style>
</head>
<body>
<h1>Book Generator</h1>
<p>Language: {{ locale }}</p>
<p>Seed: {{ seed }}</p>
<p>Average Likes: {{ averageLikes }}</p>
<p>Average Reviews: {{ averageReviews }}</p>

{% for book in books %}
    <div class="book-container">
{#        <div class="book-isbn">ISBN: {{ book.isbn }}</div>#}
        <div class="book-title">{{ book.title }}</div>
        <div class="book-author">Author(s): {{ book.author }}</div>
{#        <div class="book-publisher">Publisher: {{ book.publisher }}</div>#}
        <div class="book-review">
            Reviews:
            {% for review in book.reviews %}
                <p>{{ review.text }} â€” {{ review.author }}</p>
            {% endfor %}
        </div>
    </div>
{% endfor %}
</body>
</html>